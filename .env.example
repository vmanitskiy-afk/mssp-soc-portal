# ========================
# Database
# ========================
DB_HOST=db
DB_PORT=5432
DB_NAME=mssp_portal
DB_USER=portal
DB_PASSWORD=portal_secret
DATABASE_URL=postgresql+asyncpg://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# ========================
# Redis
# ========================
REDIS_URL=redis://redis:6379/0

# ========================
# Auth / Security
# ========================
SECRET_KEY=CHANGE-ME-generate-with-openssl-rand-hex-64
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
ENCRYPTION_KEY=CHANGE-ME-generate-with-python-fernet

# ========================
# RuSIEM (default / fallback)
# ========================
# Per-tenant config is stored in DB, these are defaults
RUSIEM_API_URL=https://10.1.21.4
RUSIEM_API_KEY=CHANGE-ME
RUSIEM_VERIFY_SSL=false

# ========================
# Celery
# ========================
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2

# ========================
# Email (SMTP)
# ========================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@example.com
SMTP_PASSWORD=CHANGE-ME
SMTP_FROM=MSSP SOC Portal <noreply@example.com>
SMTP_TLS=true

# ========================
# App
# ========================
APP_ENV=development
APP_DEBUG=true
APP_LOG_LEVEL=INFO
CORS_ORIGINS=http://localhost:3000
